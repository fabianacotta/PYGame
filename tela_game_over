
import pygame
import sys

def tela_game_over(tela):
    imagem_fundo = pygame.image.load("images/tela_game_over.jpg")  
    imagem_fundo = pygame.transform.scale(imagem_fundo, (1000, 600))

    rodando = True
    while rodando:
        for evento in pygame.event.get():
            if evento.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
            elif evento.type == pygame.KEYDOWN and evento.key == pygame.K_RETURN:
                rodando = False  # Volta ao menu ou reinicia o jogo

        tela.blit(imagem_fundo, (0, 0))
        pygame.display.flip()

